{{!-- views/contacts.handlebars --}}
{{! Set page title }}
{{#*inline "title"}}Contact Logs{{/inline}}

<h1>Veteran Contact Logs</h1>
<ul class="contact-list">
  {{#each contacts}}
    <li>
      <strong>{{name}}</strong><br/>
      Email: {{email}}<br/>
      Phone: {{phone}}<br/>
      Purpose: {{purpose}}<br/>
      Time In: {{time_in}} - Time Out: {{time_out}}
    </li>
  {{/each}}
</ul>




